<Window x:Class="InTouch.testWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InTouch"
        xmlns:ViewModel="clr-namespace:InTouch.ViewModel"
        mc:Ignorable="d"
        Title="testWindow" Height="450" Width="800">
    <Window.Resources>
        <ViewModel:UserViewModel x:Key="userVM"/>
    </Window.Resources>
    <StackPanel>
        <TextBox Text="{Binding Source={StaticResource userVM}, Path=userName}" />
        <TextBox Text="{Binding Source={StaticResource userVM}, Path=passWord}" />
    </StackPanel>
</Window>
